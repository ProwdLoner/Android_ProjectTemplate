            android:exported="false" />
        <activity
            android:name=".activity_set.activity_home.ActivityHome"
            android:exported="false" />
        <activity
            android:name=".activity_set.activity_init.ActivityInit"
            android:exported="true"
            android:theme="@style/Theme.ActivityInit">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

