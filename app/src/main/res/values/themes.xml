<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Application" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 상태바 -->
        <item name="android:statusBarColor" tools:targetApi="l">#FF3D7DDC</item>
        <item name="colorPrimaryVariant">#FF3D7DDC</item>

        <!-- 액션바 배경색 -->
        <item name="colorPrimary">#FFFFFFFF</item>

        <!-- 액션바 텍스트 색 -->
        <item name="android:textColorPrimary">#FF000000</item>

        <!-- 소프트 네비게이션 바 색 -->
        <item name="android:navigationBarColor">#FF000000</item>

        <!-- 버튼 색 -->
        <item name="colorOnPrimary">#FF4fc2f7</item>

        <!-- 선택 아이템 색 -->
        <item name="colorSecondary">#64b5f6</item>

        <!-- 아이템 아이콘 색 -->
        <item name="colorOnSecondary">#FF000000</item>

        <!-- 탭 배경 색 -->
        <item name="colorSurface">#FFFFFFFF</item>

        <!-- 탭 아이콘 색 -->
        <item name="colorOnSurface">#FFcbcbcb</item>

        <!-- 배경 색 -->
<!--        <item name="android:windowBackground">#FFFFFFFF</item>-->

    </style>

    <!-- 스플래시 화면 테마 -->
    <style name="Theme.ActivityInit" parent="Theme.Application">
        <!-- 상태바 -->
        <item name="android:statusBarColor" >#FF3D7DDC</item>
        <item name="colorPrimaryVariant">#FF3D7DDC</item>

        <!-- 배경 색 -->
        <item name="android:windowBackground">#FF3D7DDC</item>

        <!-- 소프트 네비게이션 바 색 -->
        <item name="android:navigationBarColor">#FF3D7DDC</item>
    </style>

    <!-- 카메라 화면 테마 -->
    <style name="Theme.Camera" parent="Theme.Application">
        <item name="android:immersive">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>