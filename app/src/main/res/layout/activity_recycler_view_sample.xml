<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0.3dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/apple_sd_gothic_neo_sb"
                android:text="기본 리사이클러뷰 샘플"
                android:textColor="#FF000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/add_item_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/apple_sd_gothic_neo_sb"
                android:text="add"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="11sp"
                app:layout_constraintEnd_toStartOf="@id/item_shuffle_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_title" />

            <Button
                android:id="@+id/item_shuffle_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/apple_sd_gothic_neo_sb"
                android:text="shuffle"
                android:textSize="11sp"
                android:lines="1"
                android:ellipsize="end"
                app:layout_constraintEnd_toStartOf="@id/go_to_top_btn"
                app:layout_constraintStart_toEndOf="@id/add_item_btn"
                app:layout_constraintTop_toBottomOf="@id/activity_title" />

            <Button
                android:id="@+id/go_to_top_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/apple_sd_gothic_neo_sb"
                android:text="go to top"
                android:textSize="11sp"
                android:lines="1"
                android:ellipsize="end"
                app:layout_constraintEnd_toStartOf="@id/go_to_bottom_btn"
                app:layout_constraintStart_toEndOf="@id/item_shuffle_btn"
                app:layout_constraintTop_toBottomOf="@id/activity_title" />

            <Button
                android:id="@+id/go_to_bottom_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/apple_sd_gothic_neo_sb"
                android:text="go to bottom"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/go_to_top_btn"
                app:layout_constraintTop_toBottomOf="@id/activity_title" />

            <TextView
                android:id="@+id/sort_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/apple_sd_gothic_neo_r"
                android:text="아이템 정렬 기준"
                android:textColor="#FF000000"
                app:layout_constraintBottom_toBottomOf="@id/item_sort_spinner"
                app:layout_constraintStart_toStartOf="@id/add_item_btn"
                app:layout_constraintTop_toTopOf="@id/item_sort_spinner" />

            <Spinner
                android:id="@+id/item_sort_spinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/sort_title"
                app:layout_constraintTop_toBottomOf="@id/add_item_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/screen_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/screen_vertical_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:paddingTop="15dp"
                android:scrollbars="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>